<!DOCTYPE html>
<html>
  <head>
    <title><%= admin_portal_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-refresh-method" content="morph">
    <meta name="turbo-refresh-scroll" content="preserve">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://unpkg.com/slim-select@latest/dist/slimselect.css", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'layouts/admin/header' %>
    <%= render 'layouts/shared/flash' %>
    <main class="container mx-auto mt-8 mb-48 px-8">
      <%= yield %>
    </main>
    <%#= debug(params) if Rails.env.development? %>
  </body>
</html>

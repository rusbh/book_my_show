<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @screen %>

    <%= link_to "Edit this screen", edit_admin_screen_path(@screen), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to screens", admin_root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this screen", @admin_screen, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>

    <h1 class="text-2xl mt-10 mb-3 font-bold">Shows for this screen</h1>

    <% if @screen.screen_shows.present? %>
      <% @screen.screen_shows.each do |ss| %>
        <li class="text-xl"><%= ss.show.name %></li>
      <% end %>
    <% else %>
      <p>No shows scheduled or Running currently</p>
    <% end %>
  </div>
</div>

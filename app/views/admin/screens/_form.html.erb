<%= form_with(model: [:admin, screen], class: "contents") do |form| %>
  <% if screen.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(screen.errors.count, "error") %> prohibited this screen from being saved:</h2>

      <ul>
        <% screen.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :screen_name, "Screen Name/No." %>
    <%= form.text_field :screen_name, class: "remove-arrow block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", autofocus: true %>
  </div>

  <div class="my-5">
    <%= form.label :seats, "Seat capacity for this screen:" %>
    <%= form.number_field :seats, placeholder: "enter seats capacity", class: "remove-arrow block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.collection_select :status, Screen.statuses.except(:running).map { |k, v| [k.humanize, k] }, :last, :first, {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-44" %>
  </div>

  <div class="inline">
    <%= form.submit data: { turbo_submits_with: "Saving..." }, class: "btn-blue inline-block" %>
  </div>
<% end %>

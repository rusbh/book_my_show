<div class="w-full">

  <% if user_signed_in? %>
    <div class="flex justify-between">
      <h1 class="mb-3 text-3xl font-medium">Welcome to Theater dashboard page, <%= current_user.email %></h1>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
    </div>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "rounded-lg py-3 px-5 bg-green-500 text-white font-medium" %>
  <% end %>
  
  <div class="flex justify-between mt-10">
    <div>
      <h1 class="text-4xl mt-5 font-medium"><%= @theater.name %></h1>
      <h1 class="text-2xl"><%= @theater.address %></h1>
    </div>
    <%= link_to "Add New screen", new_admin_screen_path, class: "rounded-lg py-3 px-5 my-auto bg-blue-600 text-white block font-medium" %>
  </div>
  
  <h1 class="font-bold text-3xl mt-10">Screens</h1>  

  <% @screens.each do |screen| %>
    <div class="my-3">
      <li class="text-xl underline"><a href="<%= admin_screen_path(screen.theater, screen) %>">Screen no: <%= screen.screen_no %></a></li>
    </div>
  <% end %>

  <h1 class="font-bold text-3xl mt-10 mb-3">Shows</h1>

  <% @shows.each do |show| %>
    <h1 class="text-2xl"><%= show.name.capitalize %> - on Screen <%= show.screens.first.screen_no %></h1>
    <%= image_tag url_for(show.poster) if show.poster.attached? %>
  <% end %>

  <h1 class="font-bold text-3xl mt-10">Feedbacks</h1>

  <% @feedbacks.each do |f| %>
    <li class="text-2xl"><%= f.comment %><span> - by <%= f.user.name %></span></li>
  <% end %>
  </div>
</div>
<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing show details</h1>

  <%= render "form", show: @show, form_type: :edit %>

  <%= link_to "Show this show", admin_screen_show_path(@theater, @screen, @show), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to shows", admin_screen_shows_path(@theater, @screen), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

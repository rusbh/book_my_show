<div class="w-full mb-40">
  <h1 class="text-3xl font-bold"></h1>

  <%= render @screening %>

  <%= link_to "Edit screening details", edit_admin_screen_screening_path(@screen, @screening), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to screen's screenings", admin_screen_screenings_path(@screen), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy screening for this screen", admin_screen_screening_path(@screen, @screening), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-600 text-white font-medium" %>
  </div>
</div>

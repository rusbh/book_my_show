<% content_for :title, "Edit Show" %>

<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing show details for Screen <%= @screen.screen_name %></h1>

  <%= render "edit_form", screen: @screen, screening: @screening %>

  <%= link_to "Show this screening", admin_screen_screening_path(@screen, @screening), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to screenings", admin_screen_screenings_path(@screen), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

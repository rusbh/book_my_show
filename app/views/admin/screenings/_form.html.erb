<%= form_with(model: [:admin, @screen, @screening], class: "contents") do |f| %>
  <% if screening.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(screening.errors.count, "error") %>  prohibited this screening from being saved:</h2>

      <ul>
        <% screening.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= f.label :show_id, "Pick a Show" %>
    <%= f.collection_select :show_id, Show.all, :id, :name, {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.hidden_field :screen_id, value: @screen.id %>
  </div>
  
  <div class="my-5">
    <%= f.label :price, "Ticket Price in Rupees (â‚¹)" %>
    <%= f.number_field :price, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" id="bum">
    <%= f.label :start_date, "Starting date for this screen" %>
    <%= f.date_field :start_date, min: Date.current, class: "datepicker block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  
  <div class="my-5">
    <%= f.label :end_date, "Ending date for this screen" %>
    <%= f.date_field :end_date, min: Date.current, class: "datepicker block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Screenings" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold mb-4 text-4xl">Screenings for Shows</h1>
    <%= link_to "New screening", new_admin_screen_screening_path(@screen), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="feedbacks" class="min-w-full">
    <% @screenings.each do |screening| %>
      <a href="<%= admin_screen_screening_path(@screen, screening) %>">
        <%= image_tag url_for(screening.show.poster.variant(:display)), class: "rounded-lg hover:scale-105 cursor-pointer transition" if screening.show.poster.attached? %>
      <h1 class="text-3xl mt-4 font-semibold"><%= screening.show.name %></h1>
      </a>
    <% end %>
  </div>
</div>

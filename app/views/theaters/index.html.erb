<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Theaters" %>

  <h1 class="font-bold text-4xl mb-10">All Theaters</h1>
  
  <div id="theaters" class="min-w-full">
    <% @theaters.each do |theater| %>
      <%= render theater %>
      <p>
        <%= link_to "Show this theater", theater, class: "ml-2 mb-10 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

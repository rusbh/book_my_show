  <div class="w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @theater %>

    <h1 class="text-3xl">All shows for theater:</h1>

    <% @theater.shows.each do |show| %>
      <div class="my-5">
        <h1 class="text-2xl"><%= show.name.capitalize %> - on Screen <%= show.screens.first.screen_no %></h1>
        <%= image_tag url_for(show.poster.variant(:display)) if show.poster.attached? %>
      </div>
    <% end %>

    <div>
      <% @theater.feedbacks.each do |f| %>
        <li><%= f.comment %> - <%= f.user.name %></li>
      <% end %> 
    </div>

    <h1>Feedbacks</h1>

    <div>
      <% @theater.feedbacks.each do |f| %>
        <li><%= f.comment %> - <%= f.user.name %></li>
      <% end %> 
    </div>
    
    <%= link_to "Back to theaters", theaters_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

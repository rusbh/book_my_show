<%= form_for [commentable, Feedback.new] do |f| %>
  <div class="my-4">
    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 4, required: true, class: "block shadow rounded-md border resize-none border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-4">
    <%= f.label :rating, "Give Ratings ⭐" %>
    <%= f.number_field :rating, step: :any, in: 1.0..10.0, placeholder: "e.g. 8.7", class: "block shadow rounded-md border resize-none border-gray-400 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="inline">
    <%= f.submit "Write a Responce", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<% content_for :title, "Event Request" %>

<div class="w-full mx-auto md:w-2/3">
  <h1 class="text-3xl font-bold">Fill event request details for <%= @theater.name %></h1>

  <%= render "form", theater: @theater, event_request: @event_request %>

  <%= link_to "Cancel", theater_path(@theater), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>

<div class="w-full mx-auto md:w-2/3">
  <p class="mt-10 text-xl">Your previous requests for this theater:</p>

  <% if @previous_requests %>
    <% @previous_requests.each do |pr| %>
      <p class="text-xl"><%= pr.name.humanize %> - <%= pr.status.humanize %></p>
    <% end %>
  <% end %>
</div>

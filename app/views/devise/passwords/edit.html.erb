<h2 class="text-3xl font-semibold">Set up new password</h2>

<div class="w-1/3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "contents") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field my-5">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="field my-5">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="actions inline">
      <%= f.submit "Confirm Password", class: "btn-blue" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
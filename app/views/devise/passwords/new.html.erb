<h2 class="text-3xl font-semibold">Forgot your password?</h2>

<div class="w-1/3">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "contents") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field my-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="actions inline">
      <%= f.submit "Send me reset password instructions", class: "btn-blue" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
<% content_for :title, "Log In" %>

<div class="w-1/3">

<h2 class="text-3xl font-bold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="field mt-5 mb-3">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3 flex items-center gap-x-2">
      <%= f.check_box :remember_me, class: "cursor-pointer" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions inline">
    <%= f.submit "Log in", class: "btn-blue mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render "devise/shared/admin_request" %>
</div>
<% if @show_screenings.exists? %>
  <% @show_screenings.each do |ss| %>
  <h1 class="text-4xl font-semibold mb-10"><%= ss.show.name %>'s screenings in theaters</h1>

  <section class="my-5 flex justify-between items-center">
    <div>
      <p class="text-2xl font-medium"><%= ss.screen.theater.name %>, <%= ss.screen.theater.city.name %></p>
      <p class="text-lg"><%= ss.screen.theater.address %></p>
    </div>
    <p class="text-xl"><%= format_date(ss.start_date) %> - <%= format_date(ss.end_date) %></p>
  </section>

  <p class="text-xl">Price: â‚¹ <%= ss.price %></p>
  <p class="text-lg mb-5"><%= ss.screen.seats %> seats remaining</p>
  <% if ss.screen.seats == 0 %>
    <%= button_to "Unavailable", {}, disabled: true, class: "rounded-lg py-3 px-5 bg-slate-300 cursor-default font-medium" %>
  <% else %>
    <%= link_to "Book now", new_screening_booking_path(ss), class: "rounded-lg py-3 px-5 my-3 bg-blue-600 text-white font-medium hover:bg-blue-700 hover:scale-105 transform transition" %>
  <% end %>
  
  <hr class="mt-8">
  <% end %>
<% else %>
  <h1 class="text-center text-4xl font-bold">Currently not running or scheduled in any theater right now!</h1>
<% end %>

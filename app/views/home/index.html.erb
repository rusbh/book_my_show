<% if @recommended_shows.present? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
    <% @recommended_shows.each do |show| %>
      <a href="<%= show_path(show) %>">

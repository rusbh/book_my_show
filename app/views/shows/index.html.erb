<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Shows" %>

  <h1 class="font-bold text-4xl">Shows</h1>

  <div id="shows" class="min-w-full">
    <% @shows.each do |show| %>
      <%= render show %>
      <p>
        <%= link_to "Show this show", show, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

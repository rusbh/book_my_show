<% content_for :title, "Shows" %>

<h1 class="font-bold text-4xl mb-10">All Shows</h1>

<% if @all_shows.present? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
    <% @all_shows.each do |show| %>
      <a href="<%= show_path(show) %>">
        <%= image_tag url_for(show.poster.variant(:display)), class: "rounded-lg hover:scale-105 cursor-pointer transition" if show.poster.attached? %>
        <h1 class="text-2xl my-4 font-semibold"><%= show.name %></h1>
      </a>
    <% end %>
  </div>
<% else %>
  <h1 class="text-xl">No shows/movies currently running in theaters</h1>
<% end %>


<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Screens" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Screens</h1>
    <%= link_to "New screen", new_screen_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="screens" class="min-w-full">
    <% @screens.each do |screen| %>
      <%= render screen %>
      <p>
        <%= link_to "Show this screen", screen, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
